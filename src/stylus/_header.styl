.site-header
  padding 15px 20px
  background-color $link-color
  margin-bottom 20px

  .logo
    font-size 36px
    margin-bottom 2px
    text-align center

  ul
    display flex
    justify-content center
    margin-bottom 0
    li
      list-style none
      margin 0 10px

    a
      color white
      text-decoration none
      &:hover
        text-decoration underline
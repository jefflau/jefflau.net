@import url('https://fonts.googleapis.com/css?family=Montserrat');

main
  max-width 600px
  margin 0 auto 0

body
  font-family Montserrat
  margin 0
  font-size 14px

h1
  margin-top 0
  font-weight 300

h2
  margin-top 2rem
  font-weight 200
  color #F08383

p
  line-height 1.8rem


li
  margin-bottom 0.8rem
  line-height 1.4rem

dt
  font-weight bold
  margin-bottom 10px

dd
  line-height 1.8rem
  margin-left 0
  margin-bottom 2rem

blockquote
  line-height 2rem
  position relative
  margin 0
  margin-top 50px

  span
    font-size 50px
    position absolute
    &:first-child
      font-size 100px
      right 100%
      position absolute

cite
  display block
  text-align right

.profile-pic
  border-radius 50%
  margin-left -45%
  float left

  @media (max-width 800px)
    margin-left 0
    margin-right 20px
    width 30%


.gatsby-highlight
  margin-bottom 20px